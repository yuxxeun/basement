---
import { AstroSeo } from '@astrolib/seo'
import { getImage } from '@astrojs/image'
import { getRelativeUrlByFilePath } from '~/utils/directories'

import defaultImageSrc from '../../../public/bsmnt.jpg'

import { SITE } from '~/config.mjs'
import ExtraMetaTags from '../atoms/ExtraMetaTags.astro'

const { src: defaultImage } = await getImage({
	src: defaultImageSrc,
	alt: 'yuxxeun site banner',
	width: 1200,
	height: 628,
})

const {
	title = SITE.title,
	description = SITE.description,
	image: _image = defaultImage,

	canonical,
	noindex = false,
	nofollow = false,

	ogTitle = title,
	ogType = 'website',
} = Astro.props

const image =
	typeof _image === 'string'
		? new URL(_image, Astro.site)
		: _image && typeof _image['src'] !== 'undefined'
		? new URL(getRelativeUrlByFilePath(_image.src), Astro.site)
		: null
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={SITE.origin} />
<meta name="twitter:creator" content={SITE.name} />
<meta name="twitter:title" content={SITE.title} />
<meta name="twitter:description" content={SITE.description} />
<meta name="twitter:image" content="https://raw.githubusercontent.com/yuxxeun/basement/main/public/bsmnt.jpg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<script async src="https://umami.yuxxeun.tech/script.js" data-website-id="14108efd-0467-4f4b-9850-36196d4253b5"
></script>

<AstroSeo
	title={title}
	description={description}
	canonical={canonical}
	noindex={noindex}
	nofollow={nofollow}
	openGraph={{
		url: canonical,
		title: ogTitle,
		description: description,
		type: ogType,
		images: image
			? [
					{
						url: image.toString(),
						alt: ogTitle,
					},
			  ]
			: undefined,
		site_name: 'yuxxeun.',
	}}
	twitter={{
		handle: '@yuxxeun',
		site: 'https://yuxxeun.tech',
		cardType: image ? 'summary_large_image' : undefined,
	}}
/>

<ExtraMetaTags />

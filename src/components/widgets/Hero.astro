---
import Picture from '~/components/core/Picture.astro'
---

<section>
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-10 md:py-20">
			<div>
				<div class="relative mb-4 mt-3 m-auto max-w-xs p-3">
					<Picture
						oncontextmenu='alert("Ooops, u not allowed to clicking right on my image ;)");return false;'
						onclick="{alert(`As long as I have hairspray & code to tackle, I'm good.`)}"
						src={import('public/krido.jpg')}
						class="mx-auto grayscale p-1 rounded-full dark:bg-black w-full"
						widths={[400, 768]}
						sizes=" (max-width: 767px) 400px, 768px"
						alt="yuxxeun cute avatar"
						loading="lazy"
						aspectRatio="1:1"
					/>
				</div>
			</div>
			<div class="text-center pb-10 md:pb-16">
				<h1
					class="text-4xl uppercase font-display text-oranged md:text-[3.50rem] leading-tighter tracking-tighter mb-1 md:mb-2 font-heading"
				>
					yuxxeun
				</h1>
				<div class="max-w-3xl mx-auto">
					<p class="lg:text-2xl text-lg tracking-tight text-black font-delight mb-8 dark:text-white">
						<!-- Iâ€™m the one who wears different hats. -->
					</p>
				</div>
			</div>
		</div>
	</div>
</section>

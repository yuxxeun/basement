---
import { Icon } from 'astro-icon'
const { prevUrl, nextUrl, prevText = 'Prev', nextText = 'Next' } = Astro.props
---

{
	(prevUrl || nextUrl) && (
		<div class="container flex font-display">
			<div class="container mx-auto flex flex-row justify-between">
				<a
					href={prevUrl}
					class={`btn mr-2 px-2 font-medium text-gray-600 shadow-none hover:text-gray-900 dark:text-gray-400 dark:hover:text-white
      ${!prevUrl ? 'invisible' : ''}`}
				>
					<div class="flex flex-row align-middle">
						<Icon name="tabler:arrow-left" class="h-6 w-6" />
						<p class="ml-2">{prevText}</p>
					</div>
				</a>
				<a
					href={nextUrl}
					class={`btn px-2 font-medium text-gray-600 shadow-none hover:text-gray-900 dark:text-gray-400 dark:hover:text-white ${
						!nextUrl ? 'invisible' : ''
					}`}
				>
					<div class="flex flex-row align-middle">
						<span class="mr-2">{nextText}</span>
						<Icon name="tabler:arrow-right" class="h-6 w-6" />
					</div>
				</a>
			</div>
		</div>
	)
}
